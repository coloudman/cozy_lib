{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@src/*":["src/*"]
        },
        "lib": ["dom","es2017"]
    },
    "include": [
        "./src/*",
        "./src/**/*"
    ]
}