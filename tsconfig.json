{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@src/*":["src/*"]
        },
        "lib": ["es2017"],

        "rootDir": "src"
    },
    "include": [
        "./src/*",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}